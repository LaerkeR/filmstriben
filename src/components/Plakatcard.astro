---
const { aarstal, filmTitle, varighed, genre, imgSrc, point, slug } =
  Astro.props;
import Play from "../components/ikoner/play.astro";
import Heart from "../components/ikoner/heart.astro";
import Info from "../components/ikoner/info.astro";
---

<a href={`${slug}`} class="w-fit h-fit">
  <article class="relative w-fit h-full aspect-auto overflow-hidden">
    <img
      class="w-fit h-auto"
      src={imgSrc}
      alt="Everything everywhere all at once"
    />

    <div
      class="absolute w-full h-full flex flex-col-reverse bottom-0 opacity-0 hover:opacity-100 transition duration-300"
    >
      <div class="bg-black info"><span></span></div>

      <div class="bg-black w-full absolute z-[1] flex flex-col px-5 pb-3">
        <p class="titel font-display text-xs">{filmTitle}</p>
        <div class="flex justify-between">
          <div class="infoBar text-grey-100 flex gap-2 items-center body-sm">
            <p class="varrighed body-xs">{varighed}</p>|<p
              class="aarstal body-xs"
            >
              {aarstal}
            </p>|<p class="genre body-xs">{genre}</p>|<p class="genre body-xs">
              {point} point
            </p>
          </div>
          <div class="gap-4 flex w-fit">
            <Heart variant="small" />
            <Info variant="small" />
          </div>
        </div>
      </div>
    </div>
  </article>
</a>

<style>
  .infoBar p {
    color: #ccc;
  }
  .info {
    content: "";
    filter: blur(20px);
    height: 22%;
    left: -50px;
    position: absolute;
    width: 150%;
    z-index: 0;
  }

  article.card:hover .titel {
    color: #caae68;
  }
</style>
