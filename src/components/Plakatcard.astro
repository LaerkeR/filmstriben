---
const { aarstal, filmTitle, varighed, genre, imgSrc, point } = Astro.props;
import Play from "../components/ikoner/play.astro";
import Heart from "../components/ikoner/heart.astro";
import Info from "../components/ikoner/info.astro";
---

<article class="relative w-fit h-full aspect-auto">
  <img
    class="w-fit h-auto"
    src={imgSrc}
    alt="Everything everywhere all at once"
  />

  <div
    class="absolute w-full h-full flex flex-col-reverse bottom-0 opacity-0 hover:opacity-100 transition duration-300"
  >
    <div>
      <div class="bg-black blurShadow blur-[10px]"></div>
      <div class="bg-black w-full h-fit z-10 flex flex-col gap-2 px-8 py-5">
        <h2 class="font-display text-sm">{filmTitle}</h2>
        <div class="infoBar text-white flex gap-2 align-middle body-sm">
          <p class="varrighed body-sm">{varighed}</p>|<p class="aarstal">
            {aarstal}
          </p>
          |<p class="genre">{genre}</p>
          |<p>{point} point</p>
        </div>
        <div class="ikoner flex gap-4">
          <Play variant="small" />
          <Heart variant="small" />
          <Info variant="small" />
        </div>
      </div>
    </div>
  </div>
</article>
