---
import Button from "../components/Button.astro";
import Facebook from "../components/ikoner/facebook.astro";
import Instagram from "../components/ikoner/Instagram.astro";
import Twitter from "../components/ikoner/twitter.astro";
---

<footer class="bg-black">
  <section class="grid grid-cols-6 mx-32 my-32">
    <div class="logo">
      <img class="logo" src="../logo.svg" alt="logo" />
      <p class="text-white">© DBC Digital A/S</p>
    </div>

    <div class="m-8">
      <a class="text-xs text-gold-500" href="">Infomation</a>
      <a class="text-white" href="">Om Filmstriben</a>
      <a class="text-white" href="">Persondata</a>
      <a class="text-white" href="">Tilgængelighedserklæring</a>
    </div>

    <div class="m-8">
      <a class="text-xs text-gold-500">Til brugerne</a>
      <a class="text-white" href="">Om pointsystem</a>
      <a class="text-white" href="">Hvordan ser jeg film</a>
      <a class="text-white" href="">Se film på biblioteket</a>
      <a class="text-white" href="">Kontakt kundeservice</a>
    </div>

    <div class="m-8">
      <img src="../dbc_logo.svg" alt="dbc_logo" />
      <p class="text-white">Tempovej 7-11 2750 Ballerup</p>
      <p class="text-white">+45 44 86 77 77</p>
    </div>

    <div class="">
      <div class="flex gap-9">
        <label class="">
          <input
            type="email"
            name="email"
            class="mt-1 body-sm px-2 py-1 border-bottom focus:outline-none rounded-md"
            placeholder="Email"
          />
        </label>

        <Button variant="secondary-uden-icon" tekst="Tilmeld nyhedsbrev" />
      </div>

      <div class="flex gap-3">
        <h5 class="text-white">Følg os:</h5>
        <Facebook variant="medium" />
        <Instagram variant="medium" />
        <Twitter variant="medium" />

        <img class="pl-16" src="../share_with_care.svg" alt="share_with_care" />
      </div>
    </div>
  </section>
</footer>
