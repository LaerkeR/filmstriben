---
const { aarstal, filmTitle, varighed, genre, imgSrc, point, kortResume } =
  Astro.props;
import Play from "../components/ikoner/play.astro";
import Heart from "../components/ikoner/heart.astro";
import Info from "../components/ikoner/info.astro";
---

<article class="bg-ashyGreen grid grid-cols-2 m-20 w-1/4 h-2/3">
  <div class="m-10">
    <img
      src="../img/mongoliet/Le dernier loup/imgCard.webp"
      alt="Le dernier loup"
    />
    {imgSrc}
  </div>

  <div class="m-10">
    <div class="z-10 flex flex-col gap-2 px-10 py-5">
      <h2 class="text-lg">{filmTitle}</h2>
      <div class="infoBar text-white flex gap-2 align-middle body-sm">
        <p class="varrighed">{varighed}</p>|<p class="aarstal">
          {aarstal}
        </p>
        |<p>{point} point</p>
        |<p class="genre">{genre}</p>
      </div>
      <div>
        <p class="kortResume">
          {kortResume}
        </p>
      </div>
      <div class="ikoner ikoner flex gap-4">
        <Play variant="medium" />
        <Heart variant="medium" />
        <Info variant="medium" />
      </div>
    </div>
  </div>
</article>
