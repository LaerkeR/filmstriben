---
import maanedensfilm from "../maanedensfilm.json";

import Heart from "../components/ikoner/heart.astro";
import Imdb from "./Imdb.astro";
---

{
  maanedensfilm.map((filmData) => (
    <article class="bg-blueSky flex flex-row py-16 px-36 justify-start gap-16">
      <a href={filmData.slug} class="relative w-1/3">
        <img
          class="aspect-auto w-fit h-fit bg-cover bg-no-repeat bg-center"
          src={`././img/${filmData.imgTema}/imgPlakat.jpg`}
          alt={filmData.alt}
        />
        <div class="absolute top-0 bottom-0 left-0 right-0 w-full h-full hover:bg-black hover:opacity-25 ease-in-out duration-300" />
      </a>

      <div class="flex flex-col justify-between">
        <div>
          <h3 class="text-xs font-dinHeader text-grey-100">
            Månedens film | se for 0 point i Maj
          </h3>

          <a href={filmData.slug}>
            <h2 class="text-xl font-dinHeader uppercase mt-2 mb-4">
              {filmData.filmTitel}
            </h2>
          </a>
          <div class="infoBar text-white flex gap-2 items-center body-lg">
            <p class="text-white body-md">{filmData.varighed}</p>|
            <p class="text-white body-md">{filmData.aarstal}</p>|
            <p class="text-white body-md">{filmData.genre}</p>|
            <p class="text-white body-md">{filmData.type}</p>|
            <p class="text-white body-md">{filmData.point} point</p>
          </div>
          <p class="beskrivelse body-md mt-12 max-w-prose">
            {filmData.langResume}
          </p>

          <div class="indstruktør mt-8 flex flex-row gap-1">
            <p class="indstruktør body-sm text-grey-200">Instruktør:</p>
            <p class="body-sm">{filmData.instruktor}</p>
          </div>
        </div>
        <div class="">
          <div class="flex items-end gap-8">
            <Heart variant="medium" />
            <Imdb tal={filmData.ratingIMDb} />
          </div>
        </div>
      </div>
    </article>
  ))
}
