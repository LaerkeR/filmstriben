---
import bornUngedatabase from "../bornunge.json";
import Undermenu from "../layouts/Undermenu.astro";
console.log(bornUngedatabase);

const { navpunkt } = Astro.props;
---

<Undermenu navpunkt="Børn & Unge">
  <div class="grid grid-rows-3 py-4 gap-x-4 gap-y-2">
    {
      bornUngedatabase.map((aldersKategori) => (
        <li class=" py-1 px-1 align-middle">
          <a
            class="Underline"
            href={aldersKategori.kategori}
          >{`${aldersKategori.kategori} +${aldersKategori.alderMenu} år`}</a>
        </li>
      ))
    }
  </div>
</Undermenu>
