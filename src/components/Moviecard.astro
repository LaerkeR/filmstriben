---
const { aarstal, filmTitle, slug, varighed, genre, imgSrc, undergenre, point } =
  Astro.props;
import Heart from "../components/ikoner/heart.astro";
import Info from "../components/ikoner/info.astro";
---

<a href={`${slug}`}>
  <article
    class="aspect-ratio relative w-full flex flex-col-reverse h-[60vw] md:h-[40vw] lg:h-[20vw] overflow-hidden bg-no-repeat bg-cover bg-top"
    style={`background-image: url("${imgSrc}")`}
  >
    <div class="w-full bottom-0 relative h-full flex flex-col-reverse">
      <div class="bg-black info"><span></span></div>
      <div class="bg-black w-full absolute z-[1] flex flex-col gap-2 px-5 pb-3">
        <p class="titel font-display text-xs">{filmTitle}</p>
        <div class="flex justify-between">
          <div class="infoBar text-grey-100 flex gap-2 items-center body-sm">
            <p class="varrighed body-xs">{varighed}</p>|<p
              class="aarstal body-xs"
            >
              {aarstal}
            </p>|<p class="genre body-xs">{genre}</p>|<p class="genre body-xs">
              {point} point
            </p>
          </div>
          <div class="gap-4 flex">
            <Heart variant="small" />
            <Info variant="small" />
          </div>
        </div>
      </div>
    </div>
    <div
      class="absolute top-0 bottom-0 left-0 right-0 w-full h-full hover:bg-black hover:opacity-25"
    >
    </div>
  </article>
</a>

<script>
  export default {
    props: ["film"],
  };
</script>

<style>
  .infoBar p {
    color: #ccc;
  }
  .info {
    content: "";
    filter: blur(20px);
    height: 40%;
    left: -50px;
    position: absolute;
    width: 150%;
    z-index: 0;
  }

  article:hover .titel {
    color: #caae68;
  }
</style>
