---
const { aarstal, filmTitle, slug, varrighed, genre, imgSrc, undergenre } =
  Astro.props;
---

<a href={`film/${slug}`}>
  <article class="relative card w-fit overflow-hidden">
    <img class="md:w-[100%]" src={imgSrc} alt="" />
    <div class="absolute w-full bottom-0 z-10">
      <div class="bg-black top-[40%] blurShadow blur-[10px]"></div>
      <div class="bg-black z-10 flex flex-col gap-2 px-5 pb-5">
        <p>{filmTitle}</p>
        <div class="infoBar flex gap-2 align-middle body-sm">
          <p class="varrighed body-xs">{varrighed}</p>|<p
            class="aarstal body-xs"
          >
            {aarstal}
          </p>|<p class="genre body-xs">{genre}</p>|<p class="genre body-xs">
            {undergenre}
          </p>
        </div>
      </div>
    </div>
  </article>
</a>

<script>
  export default {
    props: ["film"],
  };
</script>

