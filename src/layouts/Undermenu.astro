---
import filmkategoridatabase from "../filmkategori.json";
import Kryds from "../components/Kryds.astro";
console.log(filmkategoridatabase);
const { navpunkt } = Astro.props;
const handleClick = () => {
  console.log("clicked:)");
};
---

<ul class="ulle">
  <li class="navpunkt genre cursor-pointer">{navpunkt}</li>

  <div
    class="undermenu absolute hidden left-0 w-screen py-4 px-12 bg-black flex flex-col"
  >
    <div class="luk flex w-full justify-end"><Kryds /></div>
    <div class="flex flex-row gap-8">
      <ul
        class="kategori divider pr-8 py-4 grid grid-cols-2 grid-rows-3 gap-x-4 gap-y-2"
      >
        <li class="flex py-1 px-1 align-middle text-yellow-600 font-medium">
          <a href="allefilm">Alle film</a>
        </li>
        {
          filmkategoridatabase.map((filmkategori) => (
            <>
              <li class=" py-1 px-1 align-middle ">
                <a href={filmkategori}>{filmkategori}</a>
              </li>
            </>
          ))
        }
      </ul>

      <slot />
    </div>
  </div>
</ul>

<script>
  document.querySelector(".luk").addEventListener("click", toggleMenu);
  document.querySelector(".genre").addEventListener("click", toggleMenu);

  function toggleMenu() {
    document.querySelector(".undermenu").classList.toggle("hidden");
  }
</script>

<style>
  .divider {
    border-right: 1px solid #ffffff;
  }
  .kategori:first-child {
    color: goldenrod;
  }

