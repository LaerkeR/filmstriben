---
import Moviecard from "../../components/Moviecard.astro";
import Button from "../../components/Button.astro";
import filmdatabase from "../../filmdatabase.json";
import Layout from "../../layouts/Layout.astro";
import Play from "../../components/ikoner/play.astro";
import Imdb from "../../components/Imdb.astro";
import Detaljertags from "../../components/Detaljertags.astro";

export async function getStaticPaths() {
  return filmdatabase.map((film) => {
    return {
      params: { slug: film.slug },
      props: { myData: film },
    };
  });
}

const { slug } = Astro.params;
const { myData } = Astro.props;
console.log(myData);
---

<Layout title={myData.filmTitel}>
  <section>
    <div class="splash w-full h-[60vw] md:h-[40vw] overflow-hidden">
      <div
        class="bg-no-repeat bg-cover bg-center w-full h-full flex flex-col justify-end"
        style={`background-image: url("../../../img/${myData.imgTema}/${myData.imgTitel}/imgSingleview.webp")`}
      >
        <div class="self-center">
          <Play />
        </div>

        <div class="bottom-5 m-10 w-full">
          <h1 class="text-2xl font-display uppercase">{myData.filmTitel}</h1>
          <div class="flex">
            <Button variant="primary" tekst="Lån filmen" />
            <Button variant="secondary" tekst="Se forsmag" />

            <div class="flex gap-10 mt-5">
              <p class="text-white">Føj til favoritter</p>
              <p class="text-white">Del</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="grid grid-cols-2 mt-8 px-10 gap-16">
      <div class="flex flex-col h-full gap-16 pt-4">
        <div class="infoBar text-white flex gap-2 items-center body-lg">
          <p class="text-white body-md">{myData.varighed}</p>|
          <p class="text-white body-md">{myData.aarstal}</p>|
          <p class="text-white body-md">{myData.type}</p>|
          <p class="text-white body-md">{myData.genre}</p>|
          <p class="text-white body-md">{myData.point} point</p>
        </div>

        <p class="text-white resume max-w-prose body-md">
          {myData.langResume}
        </p>
        <div>
          <Imdb tal={myData.ratingIMDb} />
        </div>
      </div>

      <div class="dividerLeft py-4 pl-16">
        <h3 class="text-xs text-white mb-8">DETALJER:</h3>

        <div
          class="text-white grid grid-cols-[auto_minmax(0px,_1fr)] gap-y-4 gap-x-20"
        >
          <p class="text-white">Sprog:</p>
          <Detaljertags tekst={myData.sporg} />
          <p class="text-white">Land:</p>
          <Detaljertags tekst={myData.land} />
          <p>Undergenre:</p>
          <div class="flex flex-wrap gap-3">
            {
              myData.underGenre.map((underGenre) => (
                <Detaljertags tekst={underGenre} />
              ))
            }
          </div>
          <p>Instruktør:</p>
          <div class="flex flex-wrap gap-3">
            {
              myData.instruktor.map((instruktor) => (
                <Detaljertags tekst={instruktor} />
              ))
            }
          </div>

          <p>Medvirkende:</p>
          <div class="flex flex-wrap gap-3">
            {
              myData.medvirkende.map((medvirkende) => (
                <Detaljertags tekst={medvirkende} />
              ))
            }
          </div>
          <p>Manuskriptforfatter:</p>
          <Detaljertags tekst={myData.manusforfatter} />
          <p>Filmfotografer:</p>
          <div class="flex flex-wrap gap-3">
            {
              myData.filmfotograf.map((filmfotograf) => (
                <Detaljertags tekst={filmfotograf} />
              ))
            }
          </div>

          <p>Produktionsselskab:</p>
          <div class="flex flex-wrap gap-3">
            <Detaljertags tekst={myData.produktionselskab} />
          </div>

          <p>Emneord:</p>
          <div class="flex flex-wrap gap-3">
            {myData.emneord.map((emneord) => <Detaljertags tekst={emneord} />)}
            {
              myData.medvirkende.forEach((mv) => {
                if (Array.isArray(mv)) {
                  myData.medvirkende.map(
                    (mennesker) => (
                      console.log("hurrruaaaa"),
                      (<Detaljertags tekst={mennesker} />)
                    )
                  );
                } else {
                  <Detaljertags tekst={mv} />;
                }
              })
            }
          </div>
        </div>
      </div>
    </section>
    <section>
      <div class="flex flex-row w-full justify-between gap-4 px-10">
        <Moviecard />
        <Moviecard />
        <Moviecard />
      </div>
    </section>
  </section>
</Layout>

<script></script>
